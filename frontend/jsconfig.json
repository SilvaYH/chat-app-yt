{
	"compilerOptions": {
		"baseUrl": ".",

		"jsx": "react-jsx",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"checkJs": true,
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./components/*"],
			"@pages/*": ["./pages/*"],
			"@context/*": ["./context/*"],
			"@hooks/*": ["./hooks/*"]
		}
		// "target": "ES6",
		// "lib": ["ES6", "DOM"],
		// "types": ["react", "react-dom", "react-hot-toast", "react-icons"]
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": ["src/**/*"]
}
